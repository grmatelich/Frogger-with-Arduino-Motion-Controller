  //Serial.print("Z: "); Serial.print(event.acceleration.z); Serial.print("  ");Serial.println("m/s^2 ");
  
  //Display the pitch and the roll of the accelerometer
  char buf[100];
  sprintf(buf,"%d,%d", (int)roll, (int)pitch);
  Serial.println(buf);

